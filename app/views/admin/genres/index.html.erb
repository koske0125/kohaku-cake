<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 mx-auto">
      <h2 class="text-start">Genre Add</h2>
      <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
      <table class="table table-borderless align-middle">
        <tr>
          <td class="text-start">ジャンル名：</td>
          <td><%= f.text_field :name, class: "form-control" %></td>
          <td class="text-start"><%= f.submit "Add", class: "btn btn-dark px-3" %></td>
        </tr>
      </table>
      <% end %>
      <h2 class="text-start mt-3">Genres Index</h2>
      <table class="table">
        <thead class="text-center">
          <tr>
            <th>Genre Name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td class="text-center align-middle"><%= genre.name %></td>
              <td class="text-center"><%= link_to edit_admin_genre_path(genre) do %><button class="btn btn-dark px-3">Edit Genre</button></td><% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>