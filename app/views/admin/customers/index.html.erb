<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 mx-auto">
      <h2 class="text-start">Customer Index</h2>
      <table class="table">
        <thead class="text-center">
          <tr>
            <th>Customer ID</th>
            <th>Name</th>
            <th>Mail Address</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody class="text-center">
          <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to admin_customer_path(customer), class: "link-dark" do %><%= customer.last_name %><%= customer.first_name %><% end %></td>
            <td><%= customer.email %></td>
            <td><% if customer.is_deleted == false %><span class="text-success"><strong>有効</strong></span><% else %><span class="text-muted">退会</span><% end %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>