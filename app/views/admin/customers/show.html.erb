<div class="container-fluid">
  <div class="col-sm-12 col-md-10 col-lg-8 col-xl-6 mx-auto mt-3">
    <h3 class="mt-3"><%= @customer.last_name %><%= @customer.first_name %>さんの登録情報</h3>

    <table class="table">
      <tr>
        <th class="text-center" width="30%">Customer ID</th>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <th class="text-center">氏名</th>
        <td><%= @customer.last_name %> <%= @customer.first_name %></td>
      </tr>
      <tr>
        <th class="text-center">氏名(フリガナ)</th>
        <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <th class="text-center">郵便番号</th>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <th class="text-center">住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th class="text-center">電話番号</th>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <th class="text-center">メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <th class="text-center">Status</th>
        <td><% if @customer.is_deleted == false %><span class="text-success"><strong>有効</strong></span><% else %><span class="text-muted">退会</span><% end %></td>
      </tr>
    </table>
    <div class="text-end"><%= link_to :back do %><button class="btn btn-danger px-4 me-3">Back</button><% end %><%= link_to edit_admin_customer_path(@customer) do %><button class="btn btn-dark px-3">Edit Profile</button></a><% end %></div>
  </div>
</div>