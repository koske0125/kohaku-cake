<div class="container-fluid">
  <div class="col-sm-12 col-md-8 col-lg-6 mx-auto">
    <h2>Item Detail</h2>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-2">
      <div><%= image_tag @item.get_image, size: "250x250", class: "mt-3 rounded" %></div>
      <div>
        <table class="table table-borderless mt-2">
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <td>税込価格(税抜価格)</td>
            <td><%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td><% if @item.is_active == true %><span class="text-success"><strong>販売中</strong></span><% else %><span class="text-muted">販売停止中</span><% end %></td>
          </tr>
        </table>
      </div>
    </div>
    <div class="text-center"><%= link_to edit_admin_item_path(@item.id) do %><button class="btn btn-dark px-4 me-3">Edit Item</button><% end %><%= link_to :back do %><button class="btn btn-danger px-4">Back</button><% end %></div>
    </div>
</div>