<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 mx-auto">
      <h2 class="text-start">Edit Item</h2>
      <%= form_with model: @item, url: admin_item_path do |f| %>
      <div class="row row-cols-2 g-1">
        <div class="text-center w-25"><%= f.label :image, "商品画像", class: "mt-2 me-3" %></div><div class="w-75"><%= f.file_field :image, class: "form-control", accept: 'image/*' %></div>
        <div class="text-center w-25"><%= f.label :name, "商品名", class: "mt-2 me-3" %></div><div class="w-75"><%= f.text_field :name, class: "form-control" %></div>
        <div class="text-center w-25"><%= f.label :introduction, "商品説明", class: "mt-2 me-3" %></div><div class="w-75"><%= f.text_area :introduction, class: "form-control", size: "10x5" %></div>
        <div class="text-center w-25"><%= f.label :genre_id, "ジャンル", class: "mt-2 me-3" %></div><div class="w-75"><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name),{}, class: "form-select" %></div>
        <div class="text-center w-25"><%= f.label :price, "税抜価格", class: "mt-2 me-3" %></div><div class="w-75"><%= f.text_field :price, class: "form-control" %></div>
        <div class="text-center w-25"><p class="mt-2 me-3">販売ステータス</p></div><div class="w-75"><%= f.radio_button :is_active, "true", class: "mt-2" %><%= f.label :is_active, "販売中", class: "mt-2 me-3" %> <%= f.radio_button :is_active, "false", class: "mt-2" %><%= f.label :is_active, "販売停止中", class: "mt-2" %></div>
      </div>
      <div class="col text-center"><%= link_to :back do %><button class="btn btn-danger px-4 me-3">Back</button><% end %><%= f.submit "Update", class: 'btn btn-dark px-4' %><% end %></div>
    </div>
  </div>
</div>