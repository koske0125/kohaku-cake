<div class="container-fluid">
  <div class="col-sm-12 col-md-10 col-lg-8 col-xl-6 mx-auto mt-3">
    <h2 class="mb-3">Order</h2>
    <%= form_with model: @order, url: public_orders_confirm_path, method: :post do |f| %>
    <h4>支払い方法</h4>
    <%= f.radio_button :payment_method, "credit_card", class:"ms-4 form-check-input", checked: true %><%= f.label :payment_method, "クレジットカード" %><br>
    <%= f.radio_button :payment_method, "transfer", class:"ms-4 form-check-input" %><%= f.label :payment_method, "銀行振込" %>
    <h4 class="mt-4">お届け先</h4>
    <%= f.radio_button :address_select, "0", class:"ms-4 form-check-input", checked: true %><%= f.label :address, "ご自身の住所" %><br>
    <div class="ms-5 mb-1">〒<%= @customer.postal_code %> <%= @customer.address %><br><%= @customer.last_name %><%= @customer.first_name %></div>
    <%= f.radio_button :address_select, "1", class:"ms-4 form-check-input" %><%= f.label :address, "登録済み住所から選択" %><br>
    <div class="ms-5 mb-2"><%= f.collection_select :address_id, @address, :id, :full_address, {prompt: "選択してください" }, class:"form-control" %></div>
    <%= f.radio_button :address_select, "2", class:"ms-4 form-check-input" %><%= f.label :address, "新しいお届け先" %>
    <div class="ms-5 mb-2 d-flex">
      <div class="mt-2 w-25 text-center me-3"><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></div><div class="w-50"><%= f.text_field :postal_code, class: "form-control" %></div>
    </div>
    <div class="ms-5 mb-2 d-flex">
      <div class="mt-2 w-25 text-center me-3"><%= f.label :address, "住所" %></div><div class="w-75 ms-1"><%= f.text_field :address, class: "form-control" %></div>
    </div>
    <div class="ms-5 mb-2 d-flex">
      <div class="mt-2 w-25 text-center me-3"><%= f.label :name, "宛名" %></div><div class="w-50"><%= f.text_field :name, class: "form-control" %></div>
    </div>
    <div class="mx-auto text-center"><%= f.submit "Next" , class: "btn btn-primary px-5", name: nil %></div>
    <% end %>
  </div>
</div>