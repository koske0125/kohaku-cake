<div class="container-fluid">
  <div class="col-sm-12 col-md-10 col-lg-8 col-xl-6 mx-auto mt-3">
    <h2>My Page</h2>
    <h3 class="mt-3">登録情報</h3>

    <table class="table border-dark">
      <tr>
        <th class="text-center" width="30%">氏名</th>
        <td><%= @customer.last_name %> <%= @customer.first_name %></td>
      </tr>
      <tr>
        <th class="text-center">氏名(フリガナ)</th>
        <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <th class="text-center">郵便番号</th>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <th class="text-center">住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th class="text-center">電話番号</th>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <th class="text-center">メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
    </table>
    <div class="text-end"><%= link_to edit_public_customer_path(@customer) do %><button class="btn btn-dark px-3">Edit Profile</button></a><% end %></div>

    <table class="table table-borderless" width="50%">
      <tr>
        <td class="text-center align-middle" width="30%"><h3 class="my-auto">配送先</h3></td>
        <td><a href="#"><button class="btn btn-dark px-3">Show Index</button></a></td>
      </tr>
      <tr>
        <td class="text-center"><h3 class="my-auto">注文履歴</h3></td>
        <td><a href="#"><button class="btn btn-dark px-3">Show Index</button></a></td>
      </tr>
    </table>

  </div>
</div>