<div class="container-fluid">
  <div class="col-sm-12 col-md-6 col-lg-5 col-xl-3 mx-auto mt-3">
    <h2>Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <div class="mb-3 mt-3">
      <%= f.label :last_name, "名字" %>
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :first_name, "名前" %>
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :last_name_kana, "名字(フリガナ)" %>
      <%= f.text_field :last_name_kana, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :first_name_kana, "名前(フリガナ)" %>
      <%= f.text_field :first_name_kana, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
      <%= f.text_field :postal_code, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :address, "住所" %>
      <%= f.text_field :address, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :telephone_number, "電話番号(ハイフンなし)" %>
      <%= f.text_field :telephone_number, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :password, "パスワード" %><% if @minimum_password_length %><em>(<%= @minimum_password_length %>文字以上)</em><% end %>
      <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
    </div>
    <div class="mb-3">
      <%= f.label :password_confirmation, "パスワード(確認用)" %>
      <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
    </div>
    <div class="mb-3">
      <%= f.submit "Sign up", class: "btn btn-dark px-3" %>
    </div>
    <% end %>
    <%= render "public/shared/links" %>
  </div>
</div>
